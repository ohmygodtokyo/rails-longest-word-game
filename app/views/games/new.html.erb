<div class="container align-items-center mt-5">
  <h1 class="h1">WELCOME TO THE LONGEST WORD GAME</h1>

  <h2>Grid: <%= @grid %> </h2>

  <form action="/score" method="get" data-turbo="false">
    <input type="text" name="attempt">
    <input type="hidden" name="grid" value="<%= @grid %>">
    <input type="hidden" name="start_time" value="<%= @start_time %>">
    <input type="submit" value="Check your answer" class="btn btn-secondary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
